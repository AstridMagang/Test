@code {
    [Parameter]
    public int CounterValue { get; set; }

    [Parameter]
    public EventCallback OnIncrement { get; set; }

    [Parameter]
    public EventCallback OnDecrement { get; set; }
}

<MudPaper Class="pa-3" Style="margin-top: 50px;">
    <!-- Buttons for increment and decrement -->
    <div style="display: flex; justify-content: flex-start;">
        <MudButton Variant="Variant.Filled" OnClick="OnIncrement" Color="Color.Primary" Style="margin-right: 10px">+</MudButton>
        <MudButton Variant="Variant.Filled" OnClick="OnDecrement" Color="Color.Secondary">-</MudButton>
    </div>

    <!-- Total value display -->
    <div style="display: flex; justify-content: flex-start; margin-top: 10px;">
        <MudText Style="text-align: center;" Typo="Typo.h1">Total: @CounterValue</MudText>
    </div>
</MudPaper>
